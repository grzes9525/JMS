<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
    <property name="LOG_FILE" value="LogJmsCommunication" />
    <property name="LOG_DIR" value="C:\\Users\\User\\Desktop\\IdeaWorkspace\\JMSreader\\logs" />
    <appender name="JMS_COMMUNICATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_DIR}/%d{yyyy/MM}/${LOG_FILE}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>
    <property name="LOG_FILE" value="LogJmsFailedCommunication" />
    <property name="LOG_DIR" value="C:\\Users\\User\\Desktop\\IdeaWorkspace\\JMSreader\\logs" />
    <appender name="JMS_FAILED_COMMUNICATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_DIR}/%d{yyyy/MM}/${LOG_FILE}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.blue" level="info"
            additivity="false">
        <appender-ref ref="JMS_COMMUNICATION" />
        <appender-ref ref="JMS_FAILED_COMMUNICATION" />
    </logger>

    <root level="info">
        <appender-ref ref="JMS_COMMUNICATION" />
        <appender-ref ref="JMS_FAILED_COMMUNICATION" />
    </root>


</configuration>